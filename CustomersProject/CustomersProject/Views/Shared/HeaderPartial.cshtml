<header id="header" class="header">
    <div class="top-left">
        <div class="navbar-header">
            <a class="navbar-brand" href="./"><img src="@Url.Content("~/images/logo.png")" alt="Logo"></a>
            <a class="navbar-brand hidden" href="./"><img src="@Url.Content("~/images/logo2.png")" alt="Logo"></a>
            <a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>
        </div>
    </div>
    <div class="top-right">
        <div class="header-menu">
            <div class="header-left">
                

                <div class="dropdown for-notification" style="margin-right: 250px">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="notification" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-bell"></i>
                        <span class="badge badge-pill badge-danger" style="display:none"></span>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="notification" style="width: 200px; text-align:center">
                        <p class="red" style="color: black"><b><span id="customer-count"></span> New Customers</b></p>
                    </div>
                </div>

            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</header><!-- /header -->
